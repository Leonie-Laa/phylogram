Package: phylogram
Type: Package
Title: Dendrograms for Evolutionary Analysis
Version: 2.1.0
Authors@R: c(person("Shaun", "Wilkinson", role = c("aut", "cre"),
                     email = "shaunpwilkinson@gmail.com", 
                     comment = c(ORCID = '0000-0002-7332-7931')),
